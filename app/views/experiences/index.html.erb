<div class="page-header">
  <h1>
    Experiences
    <a href="/experiences/new" class="btn btn-lg btn-success">Crowdsource an Experience</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Location</th>
        <th>When</th>
        <th>Description</th>
        <th>Meal type</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @experiences.each do |experience| %>
      <tr>
        <td><%= experience.location %></td>
        <td><%= experience.when %></td>
        <td><%= experience.description %></td>
        <td><%= experience.meal_type %></td>
        <td><%= User.find_by({ :id => experience.user_id }).username %></td>
        <td>
          <a href="/experiences/<%= experience.id %>" class="btn btn-primary">Show</a>
          <a href="/experiences/<%= experience.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_experience/<%= experience.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
